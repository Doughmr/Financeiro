@model ControleDeContas.Models.Movimentacao

@{
    ViewData["Title"] = "Detalhes da Movimentação";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@ViewData["Title"]</h1>

<hr />
<div>
    <h4>Movimentação Diárias</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataVencimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataVencimento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataPagamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataPagamento)
        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorDevido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorDevido)
        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorPago)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorPago)
        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalParcelas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalParcelas)
        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroParcelas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumeroParcelas)
        </dd>

    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Editar", new { id = Model.Id }) |
    <a asp-action="Index">Voltar para a listas de movimentações</a>
</div>
